<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo2"
    tools:context=".Statistics">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/tituloecorecicla" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="253dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/estadisticasreciclajecopia" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="315dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reducción de Energía: Reciclar una tonelada de papel puede ahorrar alrededor de 4,000 kilovatios-hora de energía, suficiente para alimentar una casa promedio durante seis meses.
                                Ahorro de Recursos: El reciclaje de aluminio ahorra el 95% de la energía necesaria para producir aluminio nuevo a partir de materias primas .
                                Residuos Plásticos: Solo el 9% de todo el plástico producido ha sido reciclado. El resto termina en vertederos, océanos o se incinera .
                                Emisiones de CO2: Reciclar una tonelada de cartón puede evitar la emisión de 1.5 toneladas de CO2 ."
                android:textAlignment="gravity"
                android:textSize="19dp"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical"
            android:padding="10dp"

            tools:context=".MainActivity">


            <View
                android:layout_width="50dp"
                android:layout_height="5dp" />

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="87dp"
                android:layout_height="81dp"

                app:srcCompat="@drawable/botoninicio" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>